.tab-bar {
  display: flex;
  justify-content: space-around;
  align-items: center;
  height: 80px;
  background-color: #fff;
  box-shadow: 0 0 5px rgba(0, 0, 0, 0.1);
}

.tab-bar-item {
  flex: 1;
  text-align: center;
  padding: 10px 0;
}

.tab-bar-icon {
  width: 28px;
  height: 28px;
  margin-bottom: 5px;
}

.tab-bar-text {
  font-size: 12px;
  color: #999999;  /* 默认文字颜色 */
}

.tab-bar-item.selected .tab-bar-text {
  color: #1AAD19;  /* 选中时文字变成绿色 */
}
