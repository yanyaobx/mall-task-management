.container {
  padding: 20px;
  background-color: #f0f0f0;
}

.task-summary {
  margin-bottom: 20px;
  text-align: center;
}

.task-summary-text {
  font-size: 18px;
  font-weight: bold;
  color: #333;
}

.task-item {
  margin-bottom: 15px;
  padding: 15px;
  background-color: #fff;
  border-radius: 8px;
  box-shadow: 0 2px 8px rgba(0, 0, 0, 0.1);
}

.task-info {
  margin-bottom: 10px;
}

.task-id,
.task-date,
.task-status {
  font-size: 16px;
  margin-bottom: 5px;
  color: #555;
}

.task-image {
  width: 100%;
  height: 200px;
  border-radius: 8px;
  margin-top: 10px;
}

.no-history {
  text-align: center;
  margin-top: 50px;
  color: #999;
  font-size: 16px;
}
