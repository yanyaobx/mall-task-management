.page_container {
  background-color: #f5f7fa;
  min-height: 100vh;
  padding: 30rpx 20rpx;
  display: flex;
  flex-direction: column;
  align-items: center;
}

.camera-container {
  width: 100%;
  height: 300px;
  background-color: #000;
  margin-bottom: 20rpx;
}

.photo-button {
  margin-top: 20rpx;
  background-color: #4caf50;
  color: #fff;
  padding: 15rpx 30rpx;
  border-radius: 20rpx;
  font-size: 30rpx;
  border: none;
  text-align: center;
}

.photo-button:active {
  transform: scale(0.98);
}

.photo-container {
  width: 100%;
  display: flex;
  flex-direction: column;
  align-items: center;
  margin-top: 20rpx;
}

.photo-preview {
  width: 100%;
  height: auto;
  border-radius: 10rpx;
  margin-bottom: 20rpx;
  box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
}

.action-buttons {
  display: flex;
  justify-content: space-around;
  width: 100%;
}

.action-button {
  background-color: #4caf50;
  color: #fff;
  padding: 15rpx 30rpx;
  border-radius: 20rpx;
  font-size: 28rpx;
  border: none;
  flex: 1;
  margin: 0 10rpx;
}

.action-button:active {
  transform: scale(0.98);
}
